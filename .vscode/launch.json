    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/poll_test.o",
            "args": ["test.out"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch Server",
            "program": "${workspaceFolder}/server_main.js",
            "request": "launch",
            "console": "integratedTerminal",
            "type": "node",
            "args": ["5000"]
        },
        {
            "name": "Launch Asyncify",
            "program": "${workspaceFolder}/asyncify_test.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/patch_cpython",
            "args": ["--pythonjs", "/home/rich/source/rchiodo-cpython/builddir/emscripten-node-pthreads-dl/python.js", "--outputjs", "./output/python.js"]
        }
    ]
}